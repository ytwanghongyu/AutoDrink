<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/chose_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:text="请选择饮料"
        android:textSize="60dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/c1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/kele" />
        <ImageView
            android:id="@+id/c2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@+id/c1"
            android:src="@drawable/xuebi"
            />
        <ImageView
            android:id="@+id/c3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@+id/c2"
            android:src="@drawable/fenda"
            />

        <Button
            android:id="@+id/kele_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c1"
            android:layout_marginLeft="290dp"
            android:background="#00c799"
            android:text="选择"
            android:textSize="40dp" />
        <Button
            android:id="@+id/xuebi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c2"
            android:layout_marginLeft="590dp"
            android:text="选择"
            android:textSize="40dp"
            android:background="#00c799"
            />
        <Button
            android:id="@+id/fenda_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c3"
            android:layout_marginLeft="890dp"
            android:text="选择"
            android:textSize="40dp"
            android:background="#00c799"
            />

        <Button
            android:id="@+id/mode_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1050dp"
            android:layout_marginTop="70dp"
            android:background="#ffbe9a"
            android:text="维护模式"
            android:textSize="50dp" />




    </RelativeLayout>

</LinearLayout>